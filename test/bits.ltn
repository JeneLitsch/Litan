namespace test {
	function bits_set() {
		var cases = [
			[[0b101, 1, true], 0b111],
			[[true, 1, true], 0b11],
			[['B', 0, true], 'C'],
		];
		
		return test_all_cases("Bitwise ~x", &std::bits::set(_,_,_), cases);
	}

	function bits_get() {
		var cases = [
			[[0b101, 1], false],
			[[0b101, 0], true],
			[[true, 0], true],
			[[true, 1], false],
		];
		
		return test_all_cases("Bitwise ~x", &std::bits::get(_,_), cases);
	}

	function bits() {
		return bits_get() + bits_set();
	}
}