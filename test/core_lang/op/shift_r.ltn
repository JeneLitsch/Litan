namespace op {
	function shift_r_type(sphinx) {
		var any;
		var cases = [
			type_check(decltype(1 >> 1), "int"),
			type_check(decltype(any >> 1), "int"),
			type_check(decltype(0.0 >> 1), "error"),
		];

        sphinx::run_test(sphinx, "Operator >> type",  lambda(x) => x, cases);
	}


	function shift_r_value(sphinx) {
		var cases = [
			sphinx::assert_result([1, 1], 0),
			sphinx::assert_result([2, 1], 1),
			sphinx::assert_result([8, 2], 2),
			sphinx::assert_fail([0.0, 2]),
			sphinx::assert_success(['A', 2]),
		];
		
		var shift = lambda (a, b) => a >> b;

		sphinx::run_test(sphinx, "Operator >>", shift, cases);
	}



	function shift_r(sphinx) {
		shift_r_value(sphinx);
		shift_r_type(sphinx);
	}
}