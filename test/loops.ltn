namespace test {
	function for_alt1() {
		var fx = lambda(begin, end) {
			var sum = 0;
			for i (begin, end) {
				sum += i;
			}
			return sum;
		};

		var cases = [
			[[1, 3], 3],
			[[-1, 3], 2],
			[[3, 1], 0],
			[[-3, -1], -5],
			[[-3, 3], -3],
			[[-5, 6], 0],
			[[0, 10], 45],
			[[0, 11], 55],
			[[-1, 10], 44],
			[[-1000, -10000], 0],
		];

		return test_all_cases("for", fx, cases); 
	}

	function while_loop() {
		var fx = lambda(arr, stop) {
			var i = 0;
			while(i < std::size(arr) && arr[i] != stop) {
				i+=1;
			}
			if(i >= std::size(arr)) {
				return -1;
			};

			return i;
		}
		except(e) {
			return -1;
		};

		var cases = [
			[[[1,2,3], 3], 2],
			[[[1,2,3], 4], -1],
			[[[1337, 42], 3], -1],
			[[[1337, 42], 666], -1],
			[[[1337, 666, 42], 666], 1],
			[[[1337, 666, 42], 42], 2],
		];

		return test_all_cases("while", fx, cases);
	}

	function loops() {
		return while_loop() + for_alt1();
	}
}