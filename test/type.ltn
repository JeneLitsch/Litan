function checkType(value) {
	std::println(value);
	std::println("Bool:    " + std::is_bool(value));
	std::println("Int:     " + std::is_int(value));
	std::println("Float:   " + std::is_float(value));
	std::println("String:  " + std::is_string(value));
	std::println("OStream: " + std::is_ostream(value));
	std::println("IStream: " + std::is_istream(value));
	std::println("Fx:      " + std::is_functional(value));
	std::println("Clock:   " + std::is_clock(value));
	std::println("");
}

function main() {
	checkType(true);
	checkType(1337);
	checkType(42.42);
	checkType("Hello World");
	checkType(std::cout());
	checkType(std::cin());
	checkType(&checkType(_));
	checkType(std::clock());
}