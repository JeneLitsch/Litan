namespace test {

	function bitor() {
		var cases = [
			[[0b11, 0b1100], 0b1111],
		];
		
		var bitor    = lambda (a, b) => a | b;
		var bitor_eq = lambda (a, b) {
			a |= b;
			return a;
		};


		return
			test_all_cases("Bitwise |",  bitor, cases) +
			test_all_cases("Bitwise |=", bitor_eq, cases);
	}


	function bitand() {
		var cases = [
			[[0b011, 0b110], 0b010],
			[[0b001, 0b100], 0b000],
		];
		
		var bitand    = lambda (a, b) => a & b;
		var bitand_eq = lambda (a, b) {
			a &= b;
			return a;
		};

		return
			test_all_cases("Bitwise &",  bitand, cases) +
			test_all_cases("Bitwise &=", bitand_eq, cases);
	}



	function bitxor() {
		var cases = [
			[[0b011, 0b110], 0b101],
			[[0b001, 0b100], 0b101],
		];
		
		var bitor    = lambda (a, b) => a ^ b;
		var bitor_eq = lambda (a, b) {
			a ^= b;
			return a;
		};

		return
			test_all_cases("Bitwise &",  bitor,    cases) +
			test_all_cases("Bitwise &=", bitor_eq, cases);
	}



	function shift_l() {
		var cases = [
			[[1, 1], 2],
			[[2, 2], 8],
		];
		
		var shift    = lambda (a, b) => a << b;
		var shift_eq = lambda (a, b) {
			a <<= b;
			return a;
		};

		return
			test_all_cases("Shift l<<", shift, cases) +
			test_all_cases("Shift l<<=", shift_eq, cases);
	}



	function shift_r() {
		var cases = [
			[[1, 1], 0],
			[[2, 1], 1],
			[[8, 2], 2],
		];
		
		var shift    = lambda (a, b) => a >> b;
		var shift_eq = lambda (a, b) {
			a >>= b;
			return a;
		};

		return
			test_all_cases("Shift l>>", shift, cases) +
			test_all_cases("Shift l>>=", shift_eq, cases);
	}



	function bitwise() {
		return shift_l() + shift_r() + bitand() + bitor() + bitxor(); 
	}
}