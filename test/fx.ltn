function f1() { return 42; }
function f2() { return 1337; }

function f(a, b) {
	return a - b;
}

function makeAdd() {
	var arr1 = [1, 2, 3];
	var arr2 = [4, 5, 6];
	return function [arr1, arr2] (a, b) {
		ltn::println(arr1);
		ltn::println(arr2);
		return a + b;
	};
}

function main() {
	ltn::println("=== Lambdas ===");
	var add = makeAdd();
	ltn::println("add(1, 2) = " + ltn::invoke(add, [1, 2]));
	ltn::println("add(20, 22) = " + ltn::invoke(add, [20, 22]));

	ltn::println("=== Function pointers ===");
	var fxPtr = &f(_,_);
	ltn::println(ltn::invoke(fxPtr, [f1(), f2()]));

	ltn::println("=== Captures ===");
	var a = 1;
	var b = 2;
	var lambda = function [a, b] () {
		return a + b;
	};
	var result = ltn::invoke(lambda);
	ltn::println(result);
}