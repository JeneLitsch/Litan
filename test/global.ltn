namespace sphinx::test {
	var just_null;

	function global_default_null() {
		assert_equal_strict(just_null, null);
	}

	function global_default_null_init() {
		assert_equal_strict(reflect(expr just_null).type.name, "any");
	}



	var global_int : int = 4;
	var global_str : string = "ABC";
	var global_flt = 4.2;

	function global_assigned_init() {
		assert_equal_strict(global_int, 4);
		assert_equal_strict(global_str, "ABC");
		assert_equal_strict(global_flt, 4.2);
	}

	function global_explicit_type() {
		assert_equal_strict(reflect(expr global_int).type.name, "int");
		assert_equal_strict(reflect(expr global_str).type.name, "string");
	}

	function global_implicit_type() {
		assert_equal_strict(reflect(expr global_flt).type.name, "float");
	}



	var global_var;

	function global_reassign() {
		global_var = 4;
		assert_equal_strict(global_var, 4);
		global_var = "ABC";
		assert_equal_strict(global_var, "ABC");
		global_var = true;
		assert_equal_strict(global_var, true);
	}



	var global_int_init : int;
	var global_flt_init : float;
	var global_str_init : string;

	function global_default_init() {
		assert_equal_strict(global_int_init, 0);
		assert_equal_strict(global_str_init, "");
		assert_equal_strict(global_flt_init, 0.0);
	}

	function global_default_init_type() {
		assert_equal_strict(reflect(expr global_int_init).type.name, "int");
		assert_equal_strict(reflect(expr global_str_init).type.name, "string");
		assert_equal_strict(reflect(expr global_flt_init).type.name, "float");
	}
}