#pragma once
#include <cstdint>

// formats
// c,v,s 	-> 32 16 8 opcode(8)
// j 		-> 56      opcode(8)

enum class InstCode : std::uint8_t {
	EXIT = 0x00, SUSPEND, ERROR, SCRAP, CLEAR, PRINT, FETCH,

	LOAD = 0x10, STORE, COPY, SIZE,	INIT, STACKALLOC,
	ADDI = 0x20, SUBI, MLTI, DIVI, POWI, MODI, CASTI, INCI, DECI, MNSI,
	ADDF = 0x30, SUBF, MLTF, DIVF, POWF, MODF, CASTF, INCF, DECF, MNSF,
	
	BITOR = 0x40, BITAND, BITXOR,
	LOGOR = 0x50, LOGAND, LOGXOR,

	EQLI = 0x60, SMLI, BGRI, SPSHI,
	EQLF = 0x70, SMLF, BGRF, SPSHF,

	CALL = 0x80, GOTO, RETURN, IFSK,
	
	NEWL = 0x90, NEWU,
	
	HEAP_DEL = 0xa0, HEAP_EXIST,
	ARRAY_NEW = 0xb0, ARRAY_CLR, ARRAY_GET, ARRAY_SET, ARRAY_ADD, ARRAY_POP, ARRAY_LEN, ARRAY_FLL, ARRAY_RSZ, ARRAY_ERS,
	STRING_NEW = 0xc0, STRING_ADD, STRING_DATA, STRING_PRINT,

	EXT0 = 0xf0, EXT1, EXT2, EXT3, EXT4, EXT5, EXT6, EXT7,
	LOOP_RANGE, LOOP_INF, LOOP_CONT, LOOP_STOP, LOOP_IDX,

};

enum class LoopFunct : std::uint8_t {
	RANGE = 0x00, INF,
	CONT = 0x10, STOP,
	IDX = 0x20,
};