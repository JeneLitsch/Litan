namespace ltn {
	asm clock() {
		"newclock"
		"return"
	}

	asm toSeconds(clock) {
		"to_seconds"
		"return"
	}

	asm toMilliseconds(clock) {
		"to_seconds"
		"newf 1000.0"
		"mlt"
		"return"
	}

	function wait(seconds) {
		var clock = clock();
		var start = toSeconds(clock);
		var current = start;
		while(current - start <= seconds) {
			current = toSeconds(clock);
		}
	}
}